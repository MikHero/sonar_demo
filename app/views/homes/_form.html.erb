  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, id: :home_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :home_phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :website %>
    <%= form.text_field :website, id: :home_website, class: "form-control" %>
  </div>

  

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, id: :home_image, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
